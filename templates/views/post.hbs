<div class="blog-container">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<article>
				<div class="post">
					<h1 class="blogpost-title">{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
					{{{data.post.content.extended}}}
					<p><a class="go-back" href="/blog">&larr; back to the blog</a></p>
				</div>
			</article>
		</div>
	</div>
</div>
