<div class="gallery-container">
	<!-- if projects -->
	{{#if projects}}
		{{#each projects}}
		<!--<h2>{{name}}</h2>-->
				{{#if mainImage}}
					{{#if link}}
						<div class="col-sm-4 col-md-5 mock-scrn"><a href="{{link}}"><div class=" gallery-image" style="background-image:url({{cloudinaryUrl mainImage}})">
				</div></a></div>
					{{else}}
				<div class="col-sm-4 col-md-5 mock-scrn"><div class=" gallery-image" style="background-image:url({{cloudinaryUrl mainImage}})">
				</div></div>
					{{/if}}
				{{/if}}
		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}
</div>
