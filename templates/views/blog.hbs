<div class="blog-container">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<div class="blog">
				
				{{# each data.posts.results}}
				
					<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
						<h2><a class="blogpost-title" href="{{postUrl slug}}">{{{title}}}</a></h2>
						<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
								{{#if author.name.first}}{{author.name.first}}{{/if}}{{#if author.name.last}}<span> </span>{{author.name.last}}{{/if}}
						</p>
						<p>{{{content.extended}}}</p>
						<p><a class="read-more" href="{{postUrl slug}}">Read more...</a></p>
					</div>
				
				{{/each}}
				
			</div>
		</div>
		<div class="col-sm-4 col-md-2">
			<h4 style="color:white">Filter by:</h4>
			<div style="margin-top: 40px;" class="list-group">
				<a href="/blog" class="active list-group-item">All Categories</a>
				{{# each data.categories }}
				<a href="{{categoryUrl key}}" class="false list-group-item">{{name}}</a>
				{{/each}}
			</div>
		</div>
	</div>
	{{>pagination}}
</div>
